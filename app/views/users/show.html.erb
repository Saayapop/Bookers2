	<p id="notice"></p>
	<div class="container px-5 px-sm-0">
	  <div class="row">
	    <div class="col-md-3">
	      <%= render 'books/new', user: @user, book: @book %>
	    </div>
	    <div class="col-md-8 offset-md-1">
	      <h2>Books</h2>
	      <table class="table">
	        <thead>
	          <tr>
	            <th colspan="1"></th>
	            <th>Title</th>
	            <th>Opinion</th>
	          </tr>
	        </thead>
	        <tbody>
	          <% @user.books. each do |book| %>
	            <tr>
	              <td>
	                <%= link_to user_path(@user) do %>
	                  <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %>
	                <% end %>
	              </td>
	              <td>
	                <%= link_to book_path(book.id) do %>
	                <%= book.title %>
	                <% end %>
	              </td>
	              <td><%= book.body %></td>
	             </tr>
	          <% end %>
	        </tbody>
	      </table>
	    </div>
	  </div>
	</div>

