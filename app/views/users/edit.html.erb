<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <%= form_with model:@user, local:true do |f| %>

      <div class="form-group">
        <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name" %>
      </div>
     <div class="form-group">
        <label for="user_image">Image</label>
         <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
      </div>
      <div class="form-group">
        <label for="user_introduction">Introduction</label>
         <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Introduction"%>
      </div>
      <div class="form-group">
        <%= f.submit "Update User",  class: "btn btn-secondary" %>
      </div>
        <% end %>
    </div>
<%= flash[:notice] %>

<% if @user.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @user.errors.full_messages.each do |message| %>

        <li><%= message %></li>
        <li>error</li>
      <% end %>
    </ul>
  </div>
<% end %>

  </div>
</div>


